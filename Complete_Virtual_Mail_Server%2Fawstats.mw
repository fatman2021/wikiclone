-LogType=W
+LogType=M

-LogFormat=1
+LogFormat="%time2 %email %email_r %host %host_r %method %url %code %bytesd"

-SiteDomain="localhost"
+SiteDomain="example.com"


-HostAliases="localhost 127.0.0.1 REGEX[myserver\.com$]"
